<article>
    <div>
        <table class="comment-table">
            <tr class="header-table">
                <th>نام کاربر</th>
                <th>شماره کاربر</th>
                <th>کامنت کاربر</th>
                <th>تاریخ کامنت</th>
            </tr>
            <tr class="content-table">
                <th>@Model.Name</th>
                <th>@Model.PhoneNumber</th>
                <th>@Model.CommentText</th>
                <th>@Model.CommentDate</th>
            </tr>
        </table>
